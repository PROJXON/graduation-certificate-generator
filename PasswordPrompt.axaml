<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CanvasCertificateGenerator.PasswordPrompt"
        Title="Password Prompt"
        Width="300" Height="150" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock Text="Enter Password:" Margin="0,0,0,10"/>
        <TextBox Name="passwordBox" PasswordChar="*" Margin="0,0,0,10"/>
        <Button Content="Submit" Click="OnSubmitClick" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>